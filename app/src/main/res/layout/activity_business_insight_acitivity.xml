<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".BusinessInsightAcitivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/toolbarPending"
        android:layout_width="match_parent"
        app:cardBackgroundColor="#86BF71"
        android:layout_height="40dp">
    <TextView
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:text="Business Insights"
        android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/toolbarPending"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_margin="12dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Time Interval :"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="7dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_baseline_date_range_24"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:layout_width="match_parent"
                        android:id="@+id/intervalSpinner"
                        android:textSize="16sp"
                        android:layout_marginRight="5dp"
                        style="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
                    android:onClick="onClickGetInsights"
                    android:layout_gravity="center_horizontal"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Get Insights"
                        android:textColor="#fff"
                        android:padding="8dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="CANs sold (Can Included)"
                        android:textColor="#000"
                        android:layout_height="wrap_content"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="50dp"
                        app:cardBackgroundColor="#E67171"
                        android:layout_height="100dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:text="0"
                            android:id="@+id/soldWithCan"
                            android:gravity="center"
                            android:textSize="24sp"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:text="CANs sold (Can Excluded)"
                        android:textColor="#000"
                        android:layout_height="wrap_content"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="50dp"
                        app:cardBackgroundColor="#D6729E"
                        android:layout_height="100dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:text="0"
                            android:id="@+id/soldWithoutCan"
                            android:gravity="center"
                            android:textSize="24sp"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>