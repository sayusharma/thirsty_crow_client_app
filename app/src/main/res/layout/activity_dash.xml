<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".DashActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/toolbar"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/crow"
                android:layout_centerVertical="true"
                android:layout_width="40dp"
                android:layout_marginLeft="10dp"
                android:layout_height="40dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:text="Thirsty Crow"
                android:textColor="#fff"
                android:fontFamily="casual"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="20dp"
                android:foregroundGravity="center"
                android:layout_marginRight="10dp"
                android:onClick="onClickLogout"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_height="40dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_logout"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:id="@+id/btnPendingOrders"
                    app:cardBackgroundColor="#BD5959"
                    app:cardElevation="10dp"
                    android:layout_gravity="center"
                    android:onClick="onClickPendingOrders"
                    app:cardCornerRadius="10dp"
                    android:layout_height="120dp">
                    <TextView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:text="Pending Orders"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:id="@+id/btnDeliveredOrders"
                    app:cardBackgroundColor="#42C3BF"
                    android:onClick="onClickDeliveredOrders"
                    app:cardElevation="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10dp"
                    android:layout_height="120dp">
                    <TextView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:text="Delivered Orders"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:id="@+id/btnFeedbackComplaints"
                    app:cardBackgroundColor="#86BF71"
                    app:cardElevation="10dp"
                    android:onClick="onClickFeedback"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10dp"
                    android:layout_height="120dp">
                    <TextView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:text="Feedback/Complaints"
                        android:textSize="21sp"
                        android:textColor="#fff"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:id="@+id/btnBusinessInsights"
                    app:cardBackgroundColor="#8F8DC8"
                    android:onClick="onClickBusinessInsights"
                    app:cardElevation="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10dp"
                    android:layout_height="120dp">
                    <TextView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:text="Business Insights"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>